@model List<Blog>

@{
    ViewBag.Title = "Sort by: " + ViewBag.SortBy;
}

<div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
    <div class="col-md-6 px-0">
        <h1 class="display-4 font-italic">Sorting by: @ViewBag.SortBy</h1>
    </div>
</div>

@if (Model.Count == 0)
{
    <div class="row">
        <div class="card">
            <div class="card-header">
            </div>

            <div class="card-body">
                <h2 class="card-title">Not found</h2>
                <p class="card-text">No blog was found</p>
            </div>

        </div>
    </div>
}


@foreach (Blog blog in Model)
{
    <div class="col-md-6">
        <div class="card flex-md-row mb-4 box-shadow h-md-250">
            <div class="card-body d-flex flex-column align-items-start">
                <strong class="d-inline-block mb-2 text-primary">@blog.Topic</strong>
                <h3 class="mb-0">
                    @blog.Title
                </h3>
                <div class="mb-1 text-muted">@blog.Date.ToShortDateString()</div>
                <p class="card-text mb-auto">@blog.BriefDescription</p>
                <a asp-action="ViewBlog"
                   asp-controller="Home"
                   asp-route-BlogId="@blog.Id"
                   class="btn btn-outline-primary">Continue reading</a>
            </div>
        </div>
    </div>
}
