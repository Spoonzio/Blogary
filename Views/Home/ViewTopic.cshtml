@model List<Blog>
@{
    ViewBag.Title = ViewBag.TopicTitle + " blogs";
}

<div class="jumbotron p-3 p-md-5 text-white rounded bg-dark">
    <div class="col-md-6 px-0">
        <h1 class="display-4 font-italic">@ViewBag.TopicTitle</h1>
    </div>
</div>

@if (Model.Count == 0)
{
    <div class="row">
        <div class="card">
            <div class="card-header">
            </div>

            <div class="card-body">
                <h2 class="card-title">Not found</h2>
                <p class="card-text">No blog was found in this topic</p>
            </div>

        </div>
    </div>
}
else
{
    foreach (Blog blog in Model)
    {
        <div class="row">
            <div class="card">
                <div class="card-header">
                    @blog.Topic
                </div>

                <div class="card-body">
                    <h2 class="card-title">@blog.Title</h2>
                    <p class="card-text">@blog.BriefDescription</p>

                    <a class="btn btn-primary" asp-action="ViewBlog" asp-controller="Home" asp-route-BlogId=@blog.Id>
                        Continue reading...
                    </a>
                </div>
            </div>
        </div>

        <hr>
    }
}


