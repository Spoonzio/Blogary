@model EditProfileViewModel

@{
    ViewBag.Title = "Update Profile";
}

<h1 class="display-4">Update your infomation</h1>

<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <input asp-for="Id" class="form-control" type="hidden" value="@Model.Id" />


            <div class="form-group">
                <label asp-for="NewUsername"></label>
                <input asp-for="NewUsername" class="form-control" value="@User.Identity.Name" />
                <span asp-validation-for="NewUsername" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary">Update</button>
        </form>
    </div>
</div>