@model List<UserRoleViewModel>

@{
    ViewBag.Title = "Manage Admins";
}

<h1 class="display-4">Manage Admins</h1>

<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th scope="col">Username</th>
                <th scope="col">Admin</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Count; i++)
            {

                <tr>
                    <td>
                        <input type="hidden" asp-for="@Model[i].UserId" />
                        <input type="hidden" asp-for="@Model[i].UserName" />
                        <label asp-for="@Model[i].UserName" class="col-form-label">@Model[i].UserName</label>
                    </td>
                    <td>
                        @if (User.Identity.Name.Equals(Model[i].UserName))
                        {
                            <input type="hidden" asp-for="@Model[i].IsSelected" class=" form-check-input" />
                        }
                        else
                        {
                            <input asp-for="@Model[i].IsSelected" class=" form-check-input" />
                        }

                    </td>
                </tr>
            }

        </tbody>
    </table>
    <button class="btn btn-primary" type="submit">Update</button>
    <button class="btn btn-warning" type="reset">Reset all</button>
</form>


